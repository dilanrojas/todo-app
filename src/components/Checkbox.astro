<div class="checkbox">
  <img src="/icon-check.svg" alt="Checkbox checked">
</div>

<style>
  .checkbox {
    --size: 1.4em;
    user-select: none;

    cursor: pointer;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: var(--size);
    min-height: var(--size);
    border: 1px solid var(--text-checked);
    border-radius: 100%;
    margin-right: 1rem;

    &::before {
      position: absolute;
      content: '';
      width: var(--size);
      height: var(--size);
      background: var(--bg-checkbox);
      border-radius: 100%;
      scale: 0;
      transition: scale .12s ease-in-out;
    }

    &::after {
      position: absolute;
      content: '';
      width: calc(var(--size) - 10%);
      height: calc(var(--size) - 10%);
      background: var(--app-background);
      border-radius: 100%;
      scale: 0;
      transition: scale .12s ease-in-out;
    }

    & img {
      scale: 0;
      transition: scale .12s ease-in-out;
    }
  }

  .checkbox:hover {
    &::after {
      scale: 1;
    }

    &::before {
      scale: 1;
    }
  }

  .checkbox[aria-checked] {
    &::before {
      scale: 1;
    }

    &::after {
      scale: 0;
    }

    & img {
      scale: 1
    }
  }

</style>

<script>
  const checkbox = document.querySelector(".checkbox")

  checkbox.addEventListener("click", () => {
    checkbox.toggleAttribute("aria-checked")
  })
</script>